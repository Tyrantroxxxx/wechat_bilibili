.main{
    padding: 10rpx;
    color: #666;
}
/* 视频 */
.video_info{
    margin-top: 10rpx;
}
.video_info video{
    width: 100%;
}
.video_title{
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
}

.play_count{
    margin-left: 15rpx;
}
.comment_count{
    margin-left: 15rpx;
}
.date{
    margin-left: 15rpx;
}
.video_datail{
    margin-top: 5rpx;
    font-size: 25rpx;
}
.author{
    color: #000;
    font-size: 25rpx;
    margin-left: 15rpx;
}

/* 推荐视频 */
.other_list{
    margin-top: 10rpx;
}
.item_other{
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid #eee;
}
.other_img_wrap{
    width: 28%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.other_img_wrap image{
    width: 90%;
    border-radius: 10rpx;
}
.other_info{
    width: 60%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.other_title{
    font-size: 30rpx;
    color: #e06f93;
}
.other_detail{
    font-size: 26rpx;
    color: #666;
}
/* 评论列表 */
.comment_wrap{
    margin-top: 10rpx;
    background-color: rgba(1,1,1,0.03);
}
.comment_title{
    padding: 10rpx;
    font-size: 28rpx;
}
.comment_item{
    margin-bottom: 10rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #666;
}
.comment_user{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}
.user_icon{
    width: 60%;
    border-radius: 50%;
}
.comment_info{
   display: flex;
   flex-direction: column;
   justify-content: space-around;
   flex: 8;
}
.comment_detail{
    display: flex;
    justify-content: space-between;
}
.author{
    font-size: 28rpx;
    color: #666;
}
.date{
    color: #666;
    font-size: 24rpx;
}
.comment_content{
    font-size: 28rpx;
    color: #000;
}